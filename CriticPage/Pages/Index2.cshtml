@page
@model CriticPage.Pages.Index2Model

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Añadir película</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Movie.Title" >Título</label>
            <input asp-for="Movie.Title" />
            <span asp-validation-for="Movie.Title" ></span>
        </div>
        <div class="mb-3">
            <label for="Sinopsis">Sinopsis</label>
            <textarea class="form-control" asp-for="Movie.Synopsis" id="Sinopsis" rows="3" ></textarea>
            <span asp-validation-for="Movie.Synopsis"></span>
        </div>
        <div class="mb-3">
            <input type="file" asp-for="fileUpload.FormFile"/>
            <span asp-validation-for="fileUpload.FormFile"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Añadir</button>
    </div>
</form>
